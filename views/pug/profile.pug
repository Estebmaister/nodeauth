    script.
      function sidebar_open(typeOfSidebar="leftSidebar",sideOverlay="sideOverlay") {
        document.getElementById(typeOfSidebar).style.display = "block";
        document.getElementById(sideOverlay).style.display = "block";
        document.getElementById(typeOfSidebar).className += " displayed";
        document.getElementById(sideOverlay).className += " displayed";
      }

      function sidebar_close(typeOfSidebar="leftSidebar",sideOverlay="sideOverlay") {
        document.getElementById(typeOfSidebar).className = document.getElementById(typeOfSidebar).className.replace(" displayed","");
        document.getElementById(sideOverlay).className = document.getElementById(sideOverlay).className.replace(" displayed","");
        setTimeout(()=>document.getElementById(typeOfSidebar).style.display = "none",150)
        setTimeout(()=>document.getElementById(sideOverlay).style.display = "none",150)
      }
    button.btn.btn--primary.btn--sidebar(onclick="sidebar_open()") â˜°
    #sideOverlay.overlay.animate-opacity(onclick="sidebar_close()" style="cursor:pointer")
