html
  head
    title #{user.username}'s profile
    meta(name='description', content='Profile section')
    include includes/head.pug
    link(rel="shortcut icon", href="/img/auth.ico", type="image/x-icon")
    link(rel='stylesheet', type="text/css", href='/css/style.css')
    link(rel='stylesheet', type="text/css", href='/css/multiForm.css')
    link(rel='stylesheet', type="text/css", href='/css/sidebar.css')
  body
    - var dashboard = true;
    include includes/sidebar.pug
    h1 Welcome, #{user.username}!
    div
      if user.provider == 'github'
        img(alt='User profile picture' src=user.photo style='width:150px; border-radius:25%')
      h3= user.name
      p Email: #{(user.email)}
      p Last login: #{user.last_login}
      p Logs since register: #{user.login_count}
    script(src='/js/socket.io.js')
    script.
      var socket = io();