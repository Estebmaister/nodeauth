style
	include ../../../public/css/multiForm.css 
form#multiForm(action='/afterForm' method='POST')
	h2 Example form:
	//- One "tab" for each step in the form:
	.tab
		| Full Name:
		p
			input(type='text' name='firstName' placeholder='First name...' oninput="this.className = ''")
		p
			input(type='text' name='lastName' placeholder='Last name...' oninput="this.className = ''")
	.tab
		| Contact Info:
		p
			input(type='email' name='email' placeholder='E-mail...' oninput="this.className = ''")
		p
			input(type='tel' name='phone' placeholder='123-45-678' pattern='[0-9]{3}-[0-9]{2}-[0-9]{3}'  oninput="this.className = ''")
	//- .tab
		| Birthday:
		p
			input(type='number' name='day' min='1' max='31' maxlength='2' size='2' placeholder='DD' oninput="this.className = ''")
		p
			input(type='month' name='month' min='1' max='12' maxlength='2' size='2' placeholder='MM' oninput="this.className = ''")
		p
			input(type='number' name='year' min='1920' max='2020' maxlength='4' size='2' placeholder='YYYY' oninput="this.className = ''")
	div(style='overflow:auto;')
		div(style='float:right;')
			button#prevBtn.btn.btn--primary.btn--multi(type='button' onclick='nextPrev(-1)') Previous
			button#nextBtn.btn.btn--primary.btn--multi(type='button' onclick='nextPrev(1)') Next
	//- Circles which indicates the steps of the form:
	#steps
		span.step
		span.step
		//- span.step

script(type='application/x-javascript' src="/js/multiForm.js")